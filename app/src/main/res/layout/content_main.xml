<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    android:orientation="vertical"
    tools:showIn="@layout/activity_main">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MySQLite_______Brendy"
        android:textAlignment="center"
        android:textColor="#D81B60"
        android:textSize="25dp"
  />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:hint="Ingrese el c贸digo"
         android:layout_marginTop="20dp"
         android:layout_marginLeft="15dp"
         android:layout_marginRight="15dp"
         android:textSize="25dp"
         android:background="@drawable/estiloeditex"
         android:shadowColor="#D81B60"
         android:shadowDx="-11"
         android:shadowDy="0"
         android:shadowRadius="21"
         android:drawableStart="@drawable/codigo"
         android:paddingRight="100dp"
         android:drawablePadding="10dp"
         android:paddingLeft="25dp"

        />
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese la descripci贸n"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="25dp"
        android:background="@drawable/estiloeditex"
        android:shadowColor="#D112E6"
        android:shadowDx="-11"
        android:shadowDy="0"
        android:shadowRadius="21"
        android:drawableStart="@drawable/descripcion"
        android:paddingRight="12dp"
        android:drawablePadding="10dp"
        android:paddingLeft="25dp"
        />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/estiloeditex"
                android:hint="Ingrese el precio"
                android:shadowColor="#581E5E"
                android:shadowDx="-11"
                android:shadowDy="0"
                android:shadowRadius="21"
                android:textSize="25dp"
                android:drawableStart="@drawable/pisto"
                android:paddingRight="12dp"
                android:drawablePadding="10dp"
                android:paddingLeft="25dp"
                />



            <TextView
        android:id="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mensaje"
        android:textAlignment="center"
        android:textColor="#D81BC5"
        android:layout_marginTop="25dp"
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:textSize="15dp"
        android:onClick="alta"
        android:background="@drawable/estiloguardar"
        android:shadowColor="#D81B60"
        android:shadowDx="-11"
        android:shadowDy="0"
        android:shadowRadius="21"
        android:drawableRight="@drawable/ic_assignment_returned_black_24dp"
        android:paddingRight="100dp"
        android:drawablePadding="-110dp"

        />
    <Button
        android:id="@+id/btnConsultar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultar C贸digo"
        android:textAlignment="center"
        android:textSize="15dp"
        android:onClick="Consultar1"
        android:background="@drawable/estiloguardar"
        android:shadowColor="#8D15A8"
        android:shadowDx="-11"
        android:shadowDy="0"
        android:shadowRadius="21"
        android:drawableRight="@drawable/consulta"
        android:paddingRight="100dp"
        android:drawablePadding="-110dp"
        />
    <Button
        android:id="@+id/btnConsultar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultar descripci贸n"
        android:textAlignment="center"
        android:textSize="15dp"
        android:onClick="consultar2"
        android:background="@drawable/estiloguardar"
        android:shadowColor="#A318A8"
        android:shadowDx="-11"
        android:shadowDy="0"
        android:shadowRadius="21"
        android:drawableRight="@drawable/descripcion"
        android:paddingRight="100dp"
        android:drawablePadding="-110dp"
        />
    <Button
        android:id="@+id/btnBorrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Borrar"
        android:textAlignment="center"
        android:textSize="15dp"
        android:onClick="Borrar"
        android:background="@drawable/estiloguardar"
        android:shadowColor="#1221E6"
        android:shadowDx="-11"
        android:shadowDy="0"
        android:shadowRadius="21"
        android:drawableRight="@drawable/borrar"
        android:paddingRight="100dp"
        android:drawablePadding="-110dp"
        />
    <Button
        android:id="@+id/btnEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar"
        android:textAlignment="center"
        android:textSize="15dp"
        android:onClick="Editar"
        android:background="@drawable/estiloguardar"
        android:shadowColor="#9C27B0"
        android:shadowDx="-11"
        android:shadowDy="0"
        android:shadowRadius="21"
        android:drawableRight="@drawable/ic_edit_black_24dp"
        android:paddingRight="100dp"
        android:drawablePadding="-110dp"
        />
        </LinearLayout>

</ScrollView>

    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>